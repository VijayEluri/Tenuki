<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
	  <property name="driverClassName" value="${jdbc.driverClassName}"/>
	  <property name="url" value="${jdbc.url}"/>
	  <property name="username" value="${jdbc.username}"/>
  </bean>
  
  <bean id="dataset" class="com.hp.hpl.jena.sdb.SDBFactory" factory-method="connectDataset">
  	<constructor-arg>
  		<bean factory-bean="dataSource" factory-method="getConnection" scope="request"/>
  	</constructor-arg>
  	<constructor-arg>
  		<bean class="com.hp.hpl.jena.sdb.StoreDesc">
  			<constructor-arg value="${sdb.layoutName}"/>
  			<constructor-arg value="${sdb.dbTypeName}"/>
  		</bean>
  	</constructor-arg>
  </bean>
    
  <bean id="graphResource" class="com.oreilly.rdf.tenuki.jaxrs.GraphResource">
    <property name="dataset">
    	<ref bean="dataset"/>
    </property>
  </bean>

  <!-- more bean definitions go here -->

</beans>